@model RegisterViewModel
@{
    ViewData["Title"] = "Register";   
}

<h2 class="display-2">@ViewData["Title"]</h2>
<form method="post">
  <div asp-validation-summary="All" class="text-danger"></div>
  <div class="form-group">
      <label asp-for="Username">Name</label>
      <input type="text" class="form-control" asp-for="Username">
    </div>
  <div class="form-group">
    <label asp-for="Email">Email address</label>
    <input type="email" class="form-control" asp-for="Email">
  </div>
  <div class="form-group">
    <label asp-for="Password">Password</label>
    <input type="password" class="form-control" asp-for="Password">
  </div>
  <div class="form-group">
    <label asp-for="ConfirmPassword">Confirm password</label>
    <input type="password" class="form-control" asp-for="ConfirmPassword">
  </div>
  <div class="form-check">
    <input type="checkbox" class="form-check-input" asp-for="IsDeveloper">
    <label class="form-check-label" asp-for="IsDeveloper">Is a developer?</label>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>